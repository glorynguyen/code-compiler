{
  "name": "code-combiner",
  "version": "1.0.0",
  "description": "Combine TypeScript/JavaScript files into one",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac"
  },
  "keywords": [
    "electron",
    "typescript",
    "combiner"
  ],
  "author": "Vincent Nguyen",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.vincent.codecombiner",
    "productName": "Code Combiner",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.map"
    ]
  },
  "dependencies": {
    "esbuild": "^0.27.0"
  }
}
